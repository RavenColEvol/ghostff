{
  "name": "ghostff",
  "version": "1.0.0",
  "description": "Monorepo for GhostFF packages - Core, CLI, and React components for Contentstack",
  "private": true,
  "type": "commonjs",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "dev": "npm run build && lerna watch -- npm run build",
    "test": "lerna run test",
