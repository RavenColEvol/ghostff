    "install:all": "lerna bootstrap",
    "publish": "lerna publish",
    "version": "lerna version",
    "changed": "lerna changed",
    "diff": "lerna diff"
  },
  "dependencies": {},
  "devDependencies": {
    "lerna": "^8.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  }
}
